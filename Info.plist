<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Rinku</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>RinkuApp</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	
	<!-- URL Scheme for Meta AI OAuth callback -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>rinkuapp</string>
			</array>
		</dict>
	</array>
	
	<!-- Meta Wearables Device Access Toolkit Configuration -->
	<key>MWDAT</key>
	<dict>
		<key>AppLinkURLScheme</key>
		<string>rinkuapp://</string>
		<key>MetaAppID</key>
		<!-- Developer Mode: set to 0. For production, register at Wearables Developer Center -->
		<string>0</string>
		<key>ClientToken</key>
		<string>$(CLIENT_TOKEN)</string>
		<key>TeamID</key>
		<string>$(DEVELOPMENT_TEAM)</string>
	</dict>
	
	<!-- Background modes for Bluetooth communication with glasses -->
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-peripheral</string>
		<string>external-accessory</string>
	</array>
	
	<!-- Bluetooth permission for glasses connection -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Rinku needs Bluetooth access to connect to your Meta smart glasses for hands-free face recognition.</string>
	
	<!-- External accessory protocol for Meta glasses -->
	<key>UISupportedExternalAccessoryProtocols</key>
	<array>
		<string>com.meta.ar.wearable</string>
	</array>
	
	<!-- Camera permission (already in project, included for completeness) -->
	<key>NSCameraUsageDescription</key>
	<string>Rinku AI needs camera access to recognize faces of your loved ones and help you remember who they are.</string>
	
	<!-- Microphone permission for audio reminders -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Rinku AI needs microphone access to play voice reminders about your loved ones.</string>
	
	<!-- Query schemes for Meta AI app -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>fb-viewapp</string>
	</array>
	
	<!-- Scene configuration -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
	</dict>
	
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<key>UILaunchScreen</key>
	<dict/>
	
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
	
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
</dict>
</plist>
